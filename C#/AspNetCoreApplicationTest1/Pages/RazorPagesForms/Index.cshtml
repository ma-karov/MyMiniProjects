@page 
@model AspNetCoreApplicationTest1.Pages.RazorPagesForms.PrintQueryCassandraForm
@{ ViewData["ViewFile"] = "Index"; } 

<center> 
    <h2> Cassandra Tables: </h2> 
</center> 

<section id = "ID_SECTION_PRINT_ALL_TABLES" > 
    <div> 
        <h3> Books </h3>
        <table> 
            <thead> 
                <tr> 
                    <td> ID </td> 
                    <td> Title </td> 
                    <td> AuthorID </td> 
                    <td> CategoryName </td> 
                    <td> Price </td> 
                    <td> CreateYear </td> 
                </tr> 
            </thead> 
            <tbody> 
                @foreach (AspNetCoreApplicationTest1.Pages.RazorPagesForms.PrintQueryCassandraForm.RecordStructBooks Record in Model.ArrayBooks) 
                { 
                    <tr> 
                        <td> @Record.ID </td>
                        <td> @Record.Title </td>
                        <td> @Record.AuthorID </td>
                        <td> @Record.CategoryName </td>
                        <td> @Record.Price </td>
                        <td> @Record.CreateYear </td>
                    </tr> 
                } 
            </tbody> 
        </table> 
    </div> 

    <div> 
        <h3> Authors </h3>
        <table> 
            <thead> 
                <tr> 
                    <td> ID </td> 
                    <td> Name </td> 
                </tr> 
            </thead> 
            <tbody> 
                @foreach (AspNetCoreApplicationTest1.Pages.RazorPagesForms.PrintQueryCassandraForm.RecordStructAuthors Record in Model.ArrayAuthors)
                { 
                    <tr> 
                        <td> @Record.ID </td>
                        <td> @Record.Name </td>
                    </tr> 
                } 
            </tbody> 
        </table> 
    </div> 

    <div> 
        <h3> Categories </h3>
        <table> 
            <thead> 
                <tr> 
                    <td> ID </td> 
                    <td> Name </td> 
                    <td> Description </td> 
                </tr> 
            </thead> 
            <tbody> 
                @foreach (AspNetCoreApplicationTest1.Pages.RazorPagesForms.PrintQueryCassandraForm.RecordStructCategories Record in Model.ArrayCategories)
                { 
                    <tr> 
                        <td> @Record.ID </td>
                        <td> @Record.Name </td> 
                        <td> @Record.Description </td> 
                    </tr> 
                } 
            </tbody> 
        </table> 
    </div> 

    <div> 
        <h3> Reviws </h3>
        <table> 
            <thead> 
                <tr> 
                    <td> ID </td> 
                    <td> Raiting </td> 
                    <td> Description </td> 
                    <td> BookID </td> 
                    <td> UserID </td> 
                </tr> 
            </thead> 
            <tbody> 
                @foreach (AspNetCoreApplicationTest1.Pages.RazorPagesForms.PrintQueryCassandraForm.RecordStructReviews Record in Model.ArrayReviews)
                { 
                    <tr> 
                        <td> @Record.ID </td>
                        <td> @Record.Raiting </td> 
                        <td> @Record.Description </td> 
                        <td> @Record.BookID </td> 
                        <td> @Record.UserID </td> 
                    </tr> 
                } 
            </tbody> 
        </table> 
    </div> 
</section> 

<form asp-antiforgery = "true" method = "post" >
    <select asp-for = "SwitchID" asp-items = "Model.SelectListItems" > </select> 
    <button asp-page-handler = "CheckInputData" > Выполнить </button> 
</form> 

<table> 
    <thead> 
        <tr> 
            <td> ID </td> 
            <td> Description </td> 
        </tr> 
    </thead> 
    <tbody> 
        @foreach (AspNetCoreApplicationTest1.Pages.RazorPagesForms.PrintQueryCassandraForm.RecordClassTable Record in Model.TableRecords) 
        { 
            <tr> 
                <td> @Record.ID </td>
                <td> @Record.Description </td>
            </tr> 
        } 
    </tbody> 
</table> 

